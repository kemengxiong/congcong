		</operation>
	</file>
	
	<file name="catalog/controller/module/account.php">
		<operation>
			<search position="before"><![CDATA[
				$this->load->language('module/account');
			]]></search>
			<add><![CDATA[
				$data['ms_seller_created'] = $this->MsLoader->MsSeller->isCustomerSeller($this->customer->getId());
